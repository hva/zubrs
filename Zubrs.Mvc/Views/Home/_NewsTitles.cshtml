@using Zubrs.Mvc.Infrastructure
@model Zubrs.Models.Article[]

<ul class="side-nav">
    @for (int i = 0; i < Model.Length; i++)
    {
        var x = Model[i];
        <li data-bz-orbit-target="news-@x.Id">
            @Html.RouteLink(x.Title, RouteName.NewsItem, new { id = x.Id })
        </li>
        if (i < Model.Length - 1)
        {
            <li class="divider"></li>
        }
    }
</ul>
